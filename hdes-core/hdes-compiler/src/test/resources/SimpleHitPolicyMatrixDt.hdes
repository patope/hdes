define decision-table: SimpleHitPolicyMatrixDt

headers: {
  name     STRING required IN,
  lastName STRING required IN,
  
  total    INTEGER required OUT formula: sum(MATRIX), // total score of hit columns
  avg      INTEGER required OUT formula: avg(MATRIX), // avg score hit columns
  max      INTEGER required OUT formula: sum(max(STATIC)) // max possible score of defined fields

} MATRIX from STRING to INTEGER: {
/* first row is expressions */ { 'BOB', 'SAM', ? },
                     lastName: {  10,    20,   30 },
                         name: {  20,    50,   60 }
}