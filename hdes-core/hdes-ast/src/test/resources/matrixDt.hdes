define decision-table: MatrixDT

headers: {
  name     STRING required IN,
  lastName STRING required IN,
  value    INTEGER required OUT,
  total    INTEGER required OUT formula: sum(hit), // total score of hit columns
  avg      INTEGER required OUT formula: avg(hit), // avg score hit columns
  max      INTEGER required OUT formula: sum(static.map(row -> max(row))) // sum max possible score of defined fields

} MATRIX from STRING to INTEGER: {
/* first row is expressions */ { 'BOB', 'SAM', ? },
                     lastName: {  10,    20,   30 },
                         name: {  20,    50,   60 }
}